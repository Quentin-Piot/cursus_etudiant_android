<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="cursus"
            type="fr.utt.if26.projet_final_if26.models.entities.Cursus" />
        <variable
            name="viewModel"
            type="fr.utt.if26.projet_final_if26.viewmodels.CursusViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#FFDCDC"
        android:onClick="@{()-> viewModel.onSelectedCursusId(cursus.id)}">


        <TextView
            android:id="@+id/tv_id_etudiant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:text="@{Integer.toString(cursus.id)}"
            android:textAlignment="center" />
        />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:text="@{cursus.nom}"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="#FFFFFF"
            android:drawableStart="@drawable/ic_baseline_close_24"
            android:drawableTint="#FF0000"
            android:onClick="@{() -> viewModel.handleOnClickDelCursus(cursus)}" />

    </LinearLayout>
</layout>